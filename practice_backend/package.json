{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend module development with node",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=development nodemon index.js",
    "build:ui": "rm -rf build && cd ../practice_frontend/ && npm run build && cp -r build ../practice_backend",
    "deploy": "fly deploy",
    "deploy:full": "npm run build:ui && npm run deploy",
    "logs:prod": "fly logs",
    "test": "NODE_ENV=test jest --verbose --runInBand"
  },
  "keywords": [
    "node",
    "server"
  ],
  "author": "suraj mishra",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^6.7.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.19.6",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.1"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
